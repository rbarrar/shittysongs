<div class="border-form-div text-center">
  <h2 class="title">Sign in</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true %>
    <br>
    <%= f.password_field :password %>
    <% if devise_mapping.rememberable? -%>
    <br>
      <!-- <label class="checkbox"> <%= f.label :remember_me %> Remember me </label> -->
      <%= f.submit "Sign in", :class=>'btn btn-primary' %>
      <br>
      <br>
      <input class="title" type="hidden" value="0" name="user[remember_me]"></input>
      <input class="title" id="user_remember_me" type="checkbox" name="user[remember_me]" value="1"></input>
      <label class="title" for="user_remember_me">Remember me</label>
    <% end -%>
    <br>
    <!-- <%= f.submit "Sign in", :class=>'btn btn-primary' %>
  <% end %> -->

  <%= render "devise/shared/links" %>
</div>
